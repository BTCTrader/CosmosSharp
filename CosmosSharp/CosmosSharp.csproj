<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<AssemblyName>CosmosSharp</AssemblyName>
		<RootNamespace>CosmosSharp</RootNamespace>
		<Authors>BTCTrader</Authors>
		<Company>BTCTrader</Company>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/BTCTrader/CosmosSharp</RepositoryUrl>
		<Copyright>Copyright (c) 2021 BTCTrader</Copyright>
		<PackageId>BTCTrader.CosmosSharp</PackageId>
		<Product>BTCTrader.CosmosSharp</Product>
		<Version>1.1.0</Version>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Humanizer" Version="2.7.9" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.0.0" />
		<PackageReference Include="NBitcoin.Secp256k1" Version="1.0.1" />
		<PackageReference Include="NBitcoin" Version="5.0.27" />
		<PackageReference Include="RestSharp" Version="106.11.7" />
	</ItemGroup>

</Project>
